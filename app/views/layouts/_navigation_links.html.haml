
%li= link_to 'Home', questions_path
%li.divider
- if user_signed_in?
  %li
    %a{href: '', id: "stop-click", data: {toggle: "modal", target: "#question-modal"}} Ask A Question
  %li.divider
%li= link_to 'Answer', answers_path
- if user_signed_in?
  %noscript
    %li.divider
    %li= link_to 'Submit Question', new_question_path
  %li.divider
  %li.dropdown
    %a{href: '', class: "dropdown-toggle", data: {toggle: "dropdown", role: "button"}, aria: {haspopup: "true", expanded: "false"}} 
      = current_user
      %span.caret
    %ul.dropdown-menu
      %li= link_to "Profile", user_path(current_user)
      %li= link_to "Settings", edit_user_registration_path
      - if user_signed_in? && admin_only?
        %li= link_to "Admin", admin_root_path
  %li.divider
  %li= link_to 'Sign Out', destroy_user_session_path, method: :delete
- else
  %li= link_to 'Sign In', new_user_session_path
  %li= link_to 'Sign Up', new_user_registration_path